<Window x:Class="Kingsman20.Windows.Login.AutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kingsman20.Windows.Login"
        mc:Ignorable="d"
        Title="AutWindow" Height="500" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <ImageBrush ImageSource="/Windows/Login/кинг1.jpg"/>
            </StackPanel.Background>
            <TextBlock Text="Kingsman" TextAlignment="Center" Width="200" Height="70" HorizontalAlignment="Center" FontSize="46" FontWeight="Bold" FontFamily="Impact"
                       >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF485646" Offset="0.02"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FF6D0D4B" Offset="1"/>
                        <GradientStop Color="#FFED1111" Offset="0.977"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
           
            <TextBlock Text="Login"
                       FontSize="20"
                       FontWeight="DemiBold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 0" Foreground="White"/>
            <TextBox x:Name="Login"
                     FontSize="18"
                     FontWeight="Black"
                     Width="240"
                     Height="30" Foreground="Black" Background="#FFC1C1C1"/>
            <TextBlock Text="Password"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 52 0 0" Foreground="White"/>
            <TextBox x:Name="Password"
                     FontSize="18"
                     FontWeight="Black"
                     Width="240"
                     Height="30" Foreground="Black" Background="#FFC1C1C1"
                     />
            <Button x:Name="Vxod"
                    Content="Sign in"
                    FontSize="20"
                    Width="250"
                    Height="50"
                    Margin="0 30 0 0" Background="#FFC1C1C1" Click="BtnSigIn_Click"/>
            <TextBlock Text="Create User"
                       FontWeight="Black"
                       HorizontalAlignment="Center"
                       Margin="0 60 0 0" Foreground="White" FontFamily="Roboto" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
