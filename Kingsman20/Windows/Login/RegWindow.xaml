<Window x:Class="Kingsman20.Windows.Login.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kingsman20.Windows.Login"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="RegWindow" Height="650" Width="670">
        

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="40"/>


        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Res/БелыйФон.jpg" Opacity="1"/>
        </Grid.Background>



        <Image x:Name="Почта" Source="/Res/Почта.png" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Center" Width="40" Margin="0,3,0,0"/>
        <Image x:Name="Человек" Source="/Res/человек.png" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="40" Margin="0,3,0,0"/>
        <Image x:Name="Ключ" Source="/Res/ключ.png" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Top"  Width="40" Margin="0,3,0,0"/>
        <TextBlock Grid.Column="1"
                   Text="Регистрация"
                   FontSize="50"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>
        <TextBlock Tag="Full Name"
                   Text="Name:" Grid.Row="1" Grid.Column="1"
                   FontSize="22"
                   FontWeight="Light"
                   VerticalAlignment="Bottom" Margin="0,0,0,5"/>
        <TextBox x:Name="FirsName" Grid.Column="1" Grid.Row="2"
                 FontSize="22"
                 Height="40"
                 Width="250"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 FontWeight="Light"
                 FontFamily="Arial"
                 Foreground="Black"
                 CaretBrush="Black"
                 BorderBrush="Black"
                 
                 Background="White"
                 Opacity="0.8"
                 BorderThickness="0,0,0,5" />
                
        <TextBlock Text ="Email:" Grid.Column="1" Grid.Row="2"
                   FontSize="22"
                   FontWeight="Light"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,5"/>
        <TextBox x:Name="Email" Grid.Column="1" Grid.Row="3"
                 FontSize="22"
                 Height="40"
                 Width="250"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 FontWeight="Light"
                 FontFamily="Arial"
                 Foreground="Black"
                 CaretBrush="Black"
                 BorderBrush="Black"
                 Opacity="0.8"
                 BorderThickness="0,0,0,5"
                 />

        <PasswordBox x:Name="PasswordReg" Grid.Row="5" Grid.Column="1"
                 FontSize="22"
                 Height="40"
                 Width="250"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 FontWeight="Light"
                 FontFamily="Arial"
                 Foreground="Black"
                 CaretBrush="Black"
                 BorderBrush="Black"
                 Background="White"
                 Opacity="0.8"
                 BorderThickness="0,0,0,5"/>
        <TextBlock Text="Password:" Grid.Column="1" Grid.Row="4"
                   FontSize="22"
                   FontWeight="Light"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,5"
                   HorizontalAlignment="Left"
                   />
        <Button x:Name="VxodReg"
                Grid.Column="1" 
                Grid.Row="6"
                HorizontalAlignment="Left"
                BorderThickness="0"
                Content="Registration"
                Foreground="Black"
                FontFamily="Montserrat"
                Cursor="Hand"
                FontSize="20"
                Width="250"
                Height="50"
                VerticalAlignment="Top"
                FontWeight="Bold"
                Background="#FFC1C1C1" 
                Click="VxodReg_Click" />

    </Grid>
</Window>
